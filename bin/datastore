#!/bin/sh

if [ ! -x bin/datastore ]; then
    echo "Please run bin/datastore from the project root."
    exit 1
fi

PROJECT_ROOT=`pwd`

cd jena-fuseki

if [ -n "$GITLAB_CI" ]; then
    ./fuseki-server --update --config="$PROJECT_ROOT/etc/fuseki.ttl" &
else
    ./fuseki-server --update --config="$PROJECT_ROOT/etc/fuseki.ttl"
fi
