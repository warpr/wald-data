#!/bin/sh

if [ ! -x bin/datastore ]; then
    echo "Please run bin/datastore from the project root."
    exit 1
fi

PROJECT_ROOT=`pwd`

cd jena-fuseki

export FUSEKI_CONF="$PROJECT_ROOT/etc/fuseki.ttl"
export FUSEKI_ARGS="--update --config=$FUSEKI_CONF"

./fuseki "$@"

# ./fuseki-server --update --config="$PROJECT_ROOT/etc/fuseki.ttl"
